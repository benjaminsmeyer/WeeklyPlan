<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <AnchorPane prefHeight="300.0" prefWidth="350.0">
      <children>
         <VBox fx:id="mainBox" prefHeight="300.0" prefWidth="350.0" spacing="10.0" style="-fx-background-color: #D7DAE5;">
            <children>
               <Label fx:id="windowLabel" text="Week Settings">
                  <font>
                     <Font name="SWItal" size="18.0" />
                  </font>
               </Label>
               <Label fx:id="nameLabel" text="Week Name">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <TextField fx:id="name" promptText="Week Name (Required)">
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </TextField>
               <Label fx:id="maxEventsLabel" text="Max Events Per Day">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <TextField fx:id="maxEventsField" promptText="∞">
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </TextField>
               <Label fx:id="maxTasksLabel" text="Max Tasks Per Day">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <TextField fx:id="maxTasksField" promptText="∞">
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </TextField>
               <Label fx:id="dayLabel" text="First Day of Week">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <HBox prefHeight="100.0" prefWidth="176.0">
                  <children>
                     <Button fx:id="sunday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Sun">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="monday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Mon">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="tuesday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Tue">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="wednesday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Wed">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="thursday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Thu">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="friday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Fri">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                     <Button fx:id="saturday" mnemonicParsing="false" prefWidth="50.0" style="-fx-background-color: #B9CDDA;" text="Sat">
                        <cursor>
                           <Cursor fx:constant="HAND" />
                        </cursor>
                        <font>
                           <Font name="Verdana" size="12.0" />
                        </font>
                     </Button>
                  </children>
               </HBox>
               <Button fx:id="saveButton" mnemonicParsing="false" style="-fx-background-color: #B9CDDA;" text="Save Settings">
                  <cursor>
                     <Cursor fx:constant="HAND" />
                  </cursor>
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </Button>
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </VBox>
      </children></AnchorPane>
</Scene>
