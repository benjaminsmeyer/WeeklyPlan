<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Scene xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="cs3500.pa05.controller.NewTaskController">
    <AnchorPane prefHeight="200" prefWidth="200">
      <children>
         <VBox prefHeight="369.0" prefWidth="291.0" spacing="10.0" style="-fx-background-color: #D7DAE5;">
            <children>
               <Label text="New Task">
                  <font>
                     <Font name="SWItal" size="18.0" />
                  </font>
               </Label>
               <Label fx:id="nameLabel" text="Name">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <TextField fx:id="name" promptText="Name (Required)">
                  <font>
                     <Font name="Verdana" size="12.0" />
                  </font>
               </TextField>
               <Label fx:id="descriptionLabel" text="Description">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <TextArea fx:id="description" prefHeight="200.0" prefWidth="200.0" promptText="Description (Optional)" wrapText="true">
                  <opaqueInsets>
                     <Insets />
                  </opaqueInsets>
               </TextArea>
               <Label fx:id="dayLabel" text="Day(s)">
                  <padding>
                     <Insets bottom="-10.0" />
                  </padding>
               </Label>
               <HBox prefHeight="100.0" prefWidth="176.0">
                  <children>
                     <Button fx:id="sunday" mnemonicParsing="false" text="Sun" />
                     <Button fx:id="monday" mnemonicParsing="false" text="Mon" />
                     <Button fx:id="tuesday" mnemonicParsing="false" text="Tue" />
                     <Button fx:id="wednesday" mnemonicParsing="false" text="Wed" />
                     <Button fx:id="thursday" mnemonicParsing="false" text="Thu" />
                     <Button fx:id="friday" mnemonicParsing="false" text="Fri" />
                     <Button fx:id="saturday" mnemonicParsing="false" text="Sat" />
                  </children>
               </HBox>
               <Button fx:id="createTask" mnemonicParsing="false" text="Create Task" />
            </children>
            <padding>
               <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         </VBox>
      </children></AnchorPane>
</Scene>
